<Window x:Class="HvZClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hoomanz vs Zombeez" Height="350" Width="525" Background="Black"
        KeyDown="Window_KeyDown" Icon="icon.ico" WindowStyle="ToolWindow"
        KeyUp="Window_KeyUp" SizeChanged="Window_Resized" Closing="Window_Closing" RenderOptions.BitmapScalingMode="HighQuality">
    <Grid Name="top">
        <Canvas Name="GUIMap" Visibility="Collapsed" Background="#FFB8F9FF" >
            <Canvas.OpacityMask>
                <ImageBrush ImageSource="Images/map.png"/>
            </Canvas.OpacityMask>
        </Canvas>
        <Canvas Name="Dialog" Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Height="78" Width="192">
            <Label Name="Dialog_message" Content="Waiting for Server...." Canvas.Left="40" Canvas.Top="23" />
        </Canvas>
    </Grid>
</Window>
