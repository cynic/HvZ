<Window x:Class="HvZClient.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Humans vs Zombies" WindowStyle="None" Height="540" Width="840" MinHeight="540" MinWidth="840"
         RenderOptions.BitmapScalingMode="HighQuality" ResizeMode="NoResize" Loaded="Window_Loaded"
         AllowsTransparency="True" Icon="icon.ico" Background="Transparent">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="209" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas Name="grounds" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <Canvas.Background>
                <ImageBrush ImageSource="Images/splash.png" Stretch="UniformToFill" />
            </Canvas.Background>
            <Canvas.BitmapEffect>
                <DropShadowBitmapEffect Color="Black" Direction="320" ShadowDepth="4" Softness="2" Opacity="0.5"/>
            </Canvas.BitmapEffect>
        </Canvas>
        <Label Name="quote" Height="26" Grid.ColumnSpan="2" Grid.Row="1" Margin="10,-5,10,0" VerticalAlignment="Top" />
        <Canvas Name="title" Background="#4CF0F8FF" Height="30" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0">
            <Label Content="{Binding Title,RelativeSource={RelativeSource FindAncestor,AncestorType=Window}}" Canvas.Left="10" Height="24" Canvas.Top="6" />
            <Button x:Name="close" Canvas.Right="10" Width="30" Height="30" Template="{DynamicResource ButtonTemplate}"/>
            <Button x:Name="minimize" Height="30" Canvas.Right="45" Width="30" Background="White" Template="{DynamicResource ButtonTemplate}" />
        </Canvas>
        <Canvas Name="MapPreview" Opacity="0.65" Grid.Row="1" Margin="34,17,10,10"/>
        <Canvas Grid.Column="0" Background="#99F0F8FF" Grid.Row="2" Margin="19,10,54,23">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="106" Canvas.Left="33" Canvas.Top="13" Width="257">
                <ListBox/>
            </ScrollViewer>
            <Label Canvas.Left="33" Canvas.Top="140" Width="176">Choose a game to join, then</Label>
            <Button Name="JoinButton" Template="{StaticResource InsideButtonTemplateNoImage}" Canvas.Left="215" Canvas.Top="140" Click="JoinButton_Click" Width="75">Join game</Button>
        </Canvas>
        <Canvas Grid.Column="1" Background="#99F0F8FF" Grid.Row="2" Margin="49,10,24,23">
            <Label Canvas.Left="28" Canvas.Top="140">Choose a map to play on, then</Label>
            <Button Template="{StaticResource InsideButtonTemplateNoImage}" Canvas.Left="205" Canvas.Top="140" Name="CreateButton" Click="CreateButton_Click">Create a game</Button>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="106" Canvas.Left="33" Canvas.Top="13" Width="257">
                <ListBox Name="Maps" SelectionChanged="Maps_SelectionChanged"/>
            </ScrollViewer>
        </Canvas>
        <Label TextBlock.FontSize="28" Foreground="White" Grid.Row="2" Margin="362,47,356,87" Grid.ColumnSpan="2" FontSize="48" >OR</Label>
        <Canvas Background="#99F0F8FF" Grid.Column="1" Grid.Row="1" Width="262" Height="146" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="82,44,52,46">
            <Label Canvas.Left="10" Canvas.Top="6" Width="55">Name:</Label>
            <TextBox Width="150" Name="Name_textBox" Canvas.Left="70" Canvas.Top="10"></TextBox>
            <Label Canvas.Left="10" Canvas.Top="48">Play as a</Label>
            <ComboBox Width="150" Canvas.Left="70" Canvas.Top="52" Name="Role">
                <ComboBox.Items>
                    <ComboBoxItem>Human</ComboBoxItem>
                    <ComboBoxItem>Zombie</ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>
        </Canvas>
    </Grid>
</Window>
